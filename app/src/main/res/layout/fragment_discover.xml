<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/classical_red"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_tab_community"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="社区动态"
            android:textColor="@color/classical_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#88D4AF37"/>

        <TextView
            android:id="@+id/tv_tab_ai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AI 助手"
            android:textColor="#CCFFF8DC"
            android:textSize="18sp"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container_community"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_create_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="24dp"
                app:backgroundTint="@color/classical_red"
                app:tint="#FFF8DC"
                app:srcCompat="@android:drawable/ic_input_add"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/classical_ivory">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/et_chat_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_input"
                    android:hint="向 AI 提问..."
                    android:maxLines="3"
                    android:minHeight="48dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_send_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_classical_button"
                    android:minWidth="70dp"
                    android:text="发送"
                    android:textColor="@color/classical_ivory"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
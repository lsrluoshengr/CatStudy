<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/classical_red"
        android:paddingHorizontal="16dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/classical_gold"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/classical_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- List Items (Card Style) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/classical_ivory"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_classical_inner_border">

            <!-- Personal Profile -->
            <RelativeLayout
                android:id="@+id/item_profile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#999999"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

            <!-- General Settings -->
            <RelativeLayout
                android:id="@+id/item_general"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通用设置"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#999999"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

            <!-- About -->
            <RelativeLayout
                android:id="@+id/item_about"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#999999"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/btn_switch_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="切换账号"
            android:textColor="@color/classical_gold"
            android:background="@drawable/bg_classical_button_red"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textColor="@color/classical_gold"
            android:background="@drawable/bg_classical_button_red"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"/>

    </LinearLayout>

</LinearLayout>
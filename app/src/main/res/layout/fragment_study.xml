<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_classical_screen">

    <!-- Title Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/classical_red"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的学习"
            android:textSize="20sp"
            android:textColor="@color/classical_gold"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/classical_gold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Study Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/classical_ivory"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top Banner with Background Image -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">
                        
                        <!-- Background Image -->
                        <ImageView
                            android:id="@+id/iv_study_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" 
                            android:background="@color/classical_text_primary"/> 
                        <View
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:background="#80000000"/> 
                            
                        <!-- Overlay content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="24dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今日学习时长"
                                android:textColor="@color/classical_ivory"
                                android:fontFamily="serif"
                                android:textSize="16sp"/>
                                
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30"
                                    android:textColor="@color/classical_gold"
                                    android:textSize="48sp"
                                    android:fontFamily="serif"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 分钟"
                                    android:textColor="@color/classical_ivory"
                                    android:textSize="16sp"
                                    android:fontFamily="serif"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                            
                            <TextView
                                android:id="@+id/btn_signin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="签到"
                                android:textColor="@color/classical_ivory"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="serif"
                                android:background="@drawable/bg_classical_button"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </FrameLayout>
                    
                    <!-- Stats Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/classical_ivory">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="上次学习"
                            android:gravity="center"
                            style="@style/ClassicalBodyText"
                            android:textSize="16sp"/>
                            
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/classical_border_gold"/>
                            
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="本月已学"
                            android:gravity="center"
                            style="@style/ClassicalBodyText"
                            android:textSize="16sp"/>
                    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
            
    <!-- Tabs -->
    <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="16dp"
                 android:layout_marginEnd="16dp"
                 android:layout_marginBottom="16dp"
                 app:cardCornerRadius="8dp"
                 app:cardBackgroundColor="@color/classical_ivory"
                 app:cardElevation="2dp">
                 
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:background="@color/classical_ivory">
                        
                        <RelativeLayout
                            android:id="@+id/tab_self_selected"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_tab_self"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="自选课程"
                                android:textSize="16sp"
                                android:fontFamily="serif"
                                android:textColor="@color/classical_red"
                                android:layout_centerInParent="true"/>
                            <View
                                android:id="@+id/indicator_tab_self"
                                android:layout_width="60dp"
                                android:layout_height="3dp"
                                android:background="@color/classical_gold"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                 </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Study List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"/>
        
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

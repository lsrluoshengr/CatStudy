<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_classical_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/classical_red"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp"
            android:paddingTop="48dp"
            android:elevation="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/classical_ivory"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
                
                <!-- Gold Border Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_classical_circle"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/cv_avatar"
                app:layout_constraintTop_toTopOf="@id/cv_avatar"
                app:layout_constraintBottom_toBottomOf="@id/cv_avatar"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="22sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/classical_gold"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 0"
                    android:textSize="14sp"
                    android:fontFamily="serif"
                    android:textColor="@color/classical_ivory"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Section 1: 积分记录 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/classical_ivory"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/bg_classical_inner_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="今日积分"
                        style="@style/ClassicalBodyText"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_coins_today"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/classical_red"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="累计积分"
                        style="@style/ClassicalBodyText"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_coins_total"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/classical_red"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: 我的服务 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的服务"
            style="@style/ClassicalTitleText"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/classical_border_gold"
            android:layout_margin="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/classical_ivory"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/bg_classical_inner_border">

                <!-- Cart -->
                <RelativeLayout
                    android:id="@+id/entry_cart"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/icon_cart"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/my_cart"
                        app:tint="@color/classical_red"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物车"
                        android:textColor="@color/classical_text_primary"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/icon_cart"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#999999"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

                <!-- Orders -->
                <RelativeLayout
                    android:id="@+id/entry_orders"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/icon_orders"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/mt_order"
                        app:tint="@color/classical_red"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        android:textColor="@color/classical_text_primary"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/icon_orders"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#999999"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

                <!-- Favorites -->
                <RelativeLayout
                    android:id="@+id/entry_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/icon_fav"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="@color/classical_red"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/classical_text_primary"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/icon_fav"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#999999"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

                <!-- Feedback -->
                <RelativeLayout
                    android:id="@+id/entry_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/icon_feed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/my_qur"
                        app:tint="@color/classical_red"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问题反馈"
                        android:textColor="@color/classical_text_primary"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/icon_feed"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#999999"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C5A028" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:alpha="0.3"/>

                <!-- Settings -->
                <RelativeLayout
                    android:id="@+id/entry_settings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/icon_set"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/my_set"
                        app:tint="@color/classical_red"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="@color/classical_text_primary"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/icon_set"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#999999"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
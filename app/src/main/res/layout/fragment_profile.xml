<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_classical_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/classical_red"
            android:padding="24dp"
            android:elevation="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/classical_ivory"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
                
                <!-- Gold Border Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_classical_circle"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/cv_avatar"
                app:layout_constraintTop_toTopOf="@id/cv_avatar"
                app:layout_constraintBottom_toBottomOf="@id/cv_avatar"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="22sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/classical_gold"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 0"
                    android:textSize="14sp"
                    android:fontFamily="serif"
                    android:textColor="@color/classical_ivory"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Section 1: 积分记录 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/classical_ivory"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/bg_classical_inner_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="今日积分"
                        style="@style/ClassicalBodyText"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_coins_today"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/classical_red"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="累计积分"
                        style="@style/ClassicalBodyText"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_coins_total"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/classical_red"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: 我的服务 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的服务"
            style="@style/ClassicalTitleText"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/classical_border_gold"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Shopping Cart -->
                <LinearLayout
                    android:id="@+id/entry_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_add"
                        app:tint="@color/classical_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物车"
                        style="@style/ClassicalBodyText"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Orders -->
                <LinearLayout
                    android:id="@+id/entry_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="@color/classical_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        style="@style/ClassicalBodyText"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Favorites -->
                <LinearLayout
                    android:id="@+id/entry_favorites"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="@color/classical_gold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        style="@style/ClassicalBodyText"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Feedback -->
                <LinearLayout
                    android:id="@+id/entry_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_help"
                        app:tint="@color/classical_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问题反馈"
                        style="@style/ClassicalBodyText"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/entry_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="@color/classical_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        style="@style/ClassicalBodyText"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="退出登录"
            android:textColor="@color/classical_gold"
            android:background="@drawable/bg_classical_button"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
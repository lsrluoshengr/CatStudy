<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_classical_screen"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:textSize="28sp"
        android:textColor="@color/classical_red"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_classical_input"
        android:hint="用户名"
        android:paddingStart="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_classical_input"
        android:hint="密码 (至少6位，含字母数字)"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_classical_input"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <EditText
            android:id="@+id/et_captcha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/bg_classical_input"
            android:hint="验证码"
            android:paddingStart="16dp"/>

        <Button
            android:id="@+id/btn_get_captcha"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="获取验证码"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/classical_gold"
            android:textColor="@color/classical_red"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意注册协议"
        android:layout_gravity="start"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="注册"
        android:textSize="18sp"
        android:background="@drawable/bg_classical_button"
        android:textColor="@color/classical_ivory"/>

    <TextView
        android:id="@+id/tv_login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？去登录"
        android:textColor="@color/classical_text_secondary"
        android:layout_marginTop="24dp"
        android:padding="8dp"/>

</LinearLayout>
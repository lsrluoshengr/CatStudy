<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/classical_ivory">

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_login_header_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4" />

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线学习系统"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/classical_gold"
        android:letterSpacing="0.05"
        android:shadowColor="#33000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintBottom_toTopOf="@+id/card_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="40dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_login_input"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="14dp"
                android:drawableTint="@color/classical_gold"
                android:hint="请输入您的用户名"
                android:paddingHorizontal="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_login_input"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="14dp"
                android:drawableTint="@color/classical_gold"
                android:hint="请输入您的密码"
                android:paddingHorizontal="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginBottom="32dp" />

            <android.widget.Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_classical_button"
                android:backgroundTint="@color/classical_gold"
                android:text="登  录"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/classical_red"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有账号？立即注册"
        android:textSize="14sp"
        android:textColor="@color/classical_red"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
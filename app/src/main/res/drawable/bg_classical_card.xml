<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/Depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- Main Card Background (Ivory) with Gold Border -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/classical_ivory"/>
            <stroke android:width="2dp" android:color="@color/classical_border_gold"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- Inner Decorative Line (Double Border Effect) -->
    <item android:top="4dp" android:bottom="6dp" android:left="4dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent -->
            <stroke android:width="1dp" android:color="#40D4AF37" android:dashWidth="4dp" android:dashGap="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
